---
import { siteConfig } from "../config";
const members = siteConfig.members;
---

<section id="members" class="p-8 sm:p-12 md:p-16 lg:p-24">
  <div>
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
      <div class="lg:col-span-4">
        <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900">
          Lab Members
        </h2>
        <div
          class="w-[75px] h-[5px] mt-2 rounded-full"
          style={`background-color: ${siteConfig.accentColor}`}
        />
      </div>

      <div class="lg:col-span-8">
        <div class="space-y-16">
          {/* Principal Investigator */}
          <div class="bg-white rounded-lg shadow-sm border border-gray-100 p-6 hover:shadow-md transition-shadow duration-300">
            <h3 class="text-2xl font-bold text-gray-900 mb-6" style={`color: ${siteConfig.accentColor}`}>
              Principal Investigator
            </h3>

            <div class="flex flex-col md:flex-row gap-6">
              <div class="flex-shrink-0">
                <img
                  src={members.principalInvestigator.photo}
                  alt={members.principalInvestigator.name}
                  class="w-32 h-32 rounded-full object-cover border-4 border-gray-200"
                  onerror="this.src='https://via.placeholder.com/128x128?text=Photo'"
                />
              </div>

              <div class="flex-1">
                <h4 class="text-xl font-semibold text-gray-900 mb-2">
                  {members.principalInvestigator.name}
                </h4>
                <p class="text-lg text-gray-600 mb-4">
                  {members.principalInvestigator.title}
                </p>

                <div class="space-y-3">
                  <div>
                    <h5 class="font-semibold text-gray-800 mb-2">Education:</h5>
                    <ul class="space-y-1">
                      {members.principalInvestigator.education.map((edu) => (
                        <li class="text-sm text-gray-600">â€¢ {edu}</li>
                      ))}
                    </ul>
                  </div>

                  <div>
                    <h5 class="font-semibold text-gray-800 mb-1">Postdoctoral Training:</h5>
                    <p class="text-sm text-gray-600">{members.principalInvestigator.postdoc}</p>
                  </div>

                  <div class="flex flex-wrap gap-3 mt-4">
                    <a
                      href={`mailto:${members.principalInvestigator.email}`}
                      class="text-sm px-3 py-1 rounded-full border border-gray-300 text-gray-600 hover:bg-gray-50 transition-colors"
                    >
                      Email
                    </a>
                    <a
                      href={members.principalInvestigator.website}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-sm px-3 py-1 rounded-full border border-gray-300 text-gray-600 hover:bg-gray-50 transition-colors"
                    >
                      Website
                    </a>
                    <a
                      href={members.principalInvestigator.links.googleScholar}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-sm px-3 py-1 rounded-full border border-gray-300 text-gray-600 hover:bg-gray-50 transition-colors"
                    >
                      Google Scholar
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>

          {/* PhD Students */}
          {members.phdStudents.length > 0 && (
            <div class="bg-white rounded-lg shadow-sm border border-gray-100 p-6 hover:shadow-md transition-shadow duration-300">
              <h3 class="text-2xl font-bold text-gray-900 mb-6" style={`color: ${siteConfig.accentColor}`}>
                Current PhD Students
              </h3>

              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                {members.phdStudents.map((student) => (
                  <div class="flex gap-4">
                    <img
                      src={student.photo}
                      alt={student.name}
                      class="w-20 h-20 rounded-full object-cover border-2 border-gray-200 flex-shrink-0"
                      onerror="this.src='https://via.placeholder.com/80x80?text=Photo'"
                    />
                    <div class="flex-1">
                      <h4 class="font-semibold text-gray-900 mb-1">
                        {student.name}
                      </h4>
                      <p class="text-sm text-gray-600 mb-2">
                        {student.research}
                      </p>
                      <a
                        href={`mailto:${student.email}`}
                        class="text-xs px-2 py-1 rounded border border-gray-300 text-gray-600 hover:bg-gray-50 transition-colors"
                      >
                        Contact
                      </a>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          )}

          {/* Master's Students */}
          {members.mastersStudents.length > 0 && (
            <div class="bg-white rounded-lg shadow-sm border border-gray-100 p-6 hover:shadow-md transition-shadow duration-300">
              <h3 class="text-2xl font-bold text-gray-900 mb-6" style={`color: ${siteConfig.accentColor}`}>
                Master's Students
              </h3>

              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                {members.mastersStudents.map((student) => (
                  <div class="flex gap-4">
                    <img
                      src={student.photo}
                      alt={student.name}
                      class="w-20 h-20 rounded-full object-cover border-2 border-gray-200 flex-shrink-0"
                      onerror="this.src='https://via.placeholder.com/80x80?text=Photo'"
                    />
                    <div class="flex-1">
                      <h4 class="font-semibold text-gray-900 mb-1">
                        {student.name}
                      </h4>
                      <p class="text-sm text-gray-600 mb-2">
                        {student.research}
                      </p>
                      <a
                        href={`mailto:${student.email}`}
                        class="text-xs px-2 py-1 rounded border border-gray-300 text-gray-600 hover:bg-gray-50 transition-colors"
                      >
                        Contact
                      </a>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          )}

          {/* Undergraduate Students */}
          {members.undergraduateStudents.length > 0 && (
            <div class="bg-white rounded-lg shadow-sm border border-gray-100 p-6 hover:shadow-md transition-shadow duration-300">
              <h3 class="text-2xl font-bold text-gray-900 mb-6" style={`color: ${siteConfig.accentColor}`}>
                Undergraduate Students
              </h3>

              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                {members.undergraduateStudents.map((student) => (
                  <div class="flex gap-4">
                    <img
                      src={student.photo}
                      alt={student.name}
                      class="w-20 h-20 rounded-full object-cover border-2 border-gray-200 flex-shrink-0"
                      onerror="this.src='https://via.placeholder.com/80x80?text=Photo'"
                    />
                    <div class="flex-1">
                      <h4 class="font-semibold text-gray-900 mb-1">
                        {student.name}
                      </h4>
                      <p class="text-sm text-gray-600 mb-2">
                        {student.research}
                      </p>
                      <a
                        href={`mailto:${student.email}`}
                        class="text-xs px-2 py-1 rounded border border-gray-300 text-gray-600 hover:bg-gray-50 transition-colors"
                      >
                        Contact
                      </a>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          )}

          {/* Alumni */}
          {members.alumni.length > 0 && (
            <div class="bg-white rounded-lg shadow-sm border border-gray-100 p-6 hover:shadow-md transition-shadow duration-300">
              <h3 class="text-2xl font-bold text-gray-900 mb-6" style={`color: ${siteConfig.accentColor}`}>
                Alumni
              </h3>

              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                {members.alumni.map((alumnus) => (
                  <div class="flex gap-4">
                    <img
                      src={alumnus.photo}
                      alt={alumnus.name}
                      class="w-20 h-20 rounded-full object-cover border-2 border-gray-200 flex-shrink-0"
                      onerror="this.src='https://via.placeholder.com/80x80?text=Photo'"
                    />
                    <div class="flex-1">
                      <h4 class="font-semibold text-gray-900 mb-1">
                        {alumnus.name}
                      </h4>
                      <p class="text-sm font-medium text-gray-700 mb-1">
                        {alumnus.degree}
                      </p>
                      <p class="text-sm text-gray-600 mb-2">
                        {alumnus.research}
                      </p>
                      <a
                        href={`mailto:${alumnus.email}`}
                        class="text-xs px-2 py-1 rounded border border-gray-300 text-gray-600 hover:bg-gray-50 transition-colors"
                      >
                        Contact
                      </a>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          )}
        </div>
      </div>
    </div>
  </div>
</section>
